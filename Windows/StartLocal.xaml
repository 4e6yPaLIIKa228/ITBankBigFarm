                <EasingPointKeyFrame KeyTime="0" Value="8.25,2"/>
                <EasingPointKeyFrame KeyTime="0:0:0.2" Value="8.25,2"/>
                <EasingPointKeyFrame KeyTime="0:0:0.3" Value="0.500003988193782,2.0548776624976"/>
            </PointAnimationUsingKeyFrames>
